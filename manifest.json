{
  "manifest_version": 2,
  "name": "ThumbSee",
  "version": "1.4",
  "description": "Displays thumbnails on Odysee download pages",
  "content_scripts": [
    {
      "matches": ["*://odysee.com/*"],
      "js": ["thumbsee.js"]
    }
  ],
  "background":{
    "scripts": ["background.js"]
  },
  "browser_action":{
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "permissions": ["activeTab", "storage"]
}
